# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 2
}

order += "volume master"
order += "load"
order += "cpu_usage"
order += "disk /"
order += "tztime local"

volume master {
	device = "default"
	mixer = "Master"
	mixer_idx = 0
 	format = "VOL: %volume"
}

cpu_usage {
	format = "CPU: %usage"
}

load {
        format = "LOAD: %1min"
}

disk "/" {
        format = "DISK: %avail"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}
